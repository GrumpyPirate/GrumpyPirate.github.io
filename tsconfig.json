{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["src/*"]
    },
    "strict": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["node_modules"],
  "include": [
    "./*.js",
    "jest.*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.types.ts",
    "src/**/*.tsx",
  ]
}
