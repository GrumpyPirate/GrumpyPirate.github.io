{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["src/*"]
    },
    "strict": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules",
    "src/**/*.css",
    "src/**/*.scss",
    "*.js"
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
